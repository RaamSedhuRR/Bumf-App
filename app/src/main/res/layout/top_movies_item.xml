<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dimension_xx_small"
    android:padding="@dimen/dimension_x_small"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="260dp"
        android:layout_height="140dp"
        app:cardCornerRadius="@dimen/dimension_large">
        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/metaverse_news"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/movie_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_marginStart="@dimen/dimension_x_small"
        android:layout_marginTop="@dimen/dimension_small"
        android:fontFamily="sans-serif-black"
        android:justificationMode="inter_word"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_x_large" />

    <TextView
        android:id="@+id/movie_category"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_marginStart="@dimen/dimension_medium"
        android:layout_marginTop="@dimen/dimension_small"
        android:fontFamily="sans-serif"
        android:layout_toRightOf="@+id/movie_name"
        android:justificationMode="inter_word"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_x_large" />
    <TextView
        android:id="@+id/movie_desc"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        android:fontFamily="sans-serif-thin"
        android:maxLines="3"
        android:justificationMode="inter_word"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dimension_small"
        android:layout_marginStart="@dimen/dimension_x_small"
        android:layout_below="@+id/movie_name"/>

</RelativeLayout>